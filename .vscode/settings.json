{
    "typescript.tsdk": "node_modules/typescript/lib",
    "react-i18n.i18nPaths": "public/locales,src/shared/config/i18n",
    "i18n-ally.localesPaths": [
        "public/locales",
        "src/shared/config/i18n"
    ],
	"i18n-ally.keystyle": "nested",
    	"eslint.validate": [
		{
			"language": "typescript",
			"autoFix": true
		},
		{
			"language": "typescriptreact",
			"autoFix": true
		}
	],
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	},
	
	"[typescript]": {
		"editor.parameterHints.enabled": true,
		"editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
	},
	"stylelint.enable": true,
	"css.validate": true,
	"scss.validate": true,
	"stylelint.validate": [
		"css",
		"scss"
	],
	"editor.codeActionsOnSave": {
		"source.fixAll.stylelint": true
	},
	"editor.tabCompletion": "on",
	"folderTemplates.structures": [
		{
			"name": "Feauteres",
			"customVariables": [],
			"omitParentDirectory": false,
			"structure": [
			  {
				"fileName": "ui/<FTName>.tsx",
			  },
			  {
				"fileName": "ui/<FTName>.stories.tsx"
			  },
			  {
				"fileName": "ui/<FTName>.module.scss"
			  },
			  {
				"fileName": "ui/__tests__/<FTName>.tsx"
			  },
			  {
				"fileName": "model/slice.ts"
			  },
			  {
				"fileName": "model/selectors.ts"
			  },
			  {
				"fileName": "model/state.ts"
			  },
			  {
				"fileName": "model/service.ts"
			  },
			  {
				"fileName": "model/types.ts"
			  },
			  {
				"fileName": "index.ts"
			  },
			]
		},
		{
			"name": "Component",
			"customVariables": [],
			"omitParentDirectory": false,
			"structure": [
				{
					"fileName": "ui/<FTName>.tsx",
				  },
				  {
					"fileName": "ui/<FTName>.stories.tsx"
				  },
				  {
					"fileName": "ui/<FTName>.module.scss"
				  },
				  {
					"fileName": "ui/__tests__/<FTName>.tsx"
				  },
				  {
					"fileName": "index.ts"
				  }
			]
		},
		{
			"name": "Shared Component",
			"customVariables": [],
			"omitParentDirectory": false,
			"structure": [
				{
					"fileName": "<FTName>.tsx",
				  },
				  {
					"fileName": "<FTName>.stories.tsx"
				  },
				  {
					"fileName": "<FTName>.module.scss"
				  },
				  {
					"fileName": "__tests__/<FTName>.tsx"
				  }
			]
		}
	],
	"workbench.colorCustomizations": {
		"activityBar.background": "#302B38",
		"titleBar.activeBackground": "#433D4E",
		"titleBar.activeForeground": "#FAFAFB"
	}
}
