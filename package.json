  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --config config/jest/jest.config.ts --logHeapUsage",
    "build": "webpack --config config/webpack/config.ts --env mode=production",
    "server": "node ./json-server/index.js",
    "dev": "concurrently \"webpack serve --config config/webpack/config.ts --env mode=development port=5000\" \"npm run server\"",
    "dev:vite": "concurrently \"vite\" \"npm run server\"",
    "lint": "eslint --ext .js --ext .jsx --ext .ts --ext .tsx -c .eslintrc.js ./src",
    "lint:fix": "npm run lint -- --fix",
    "lint:css": "stylelint '**/*.scss'",
    "lint:css:fix": "npm run lint:css -- --fix",
    "types": "tsc --noEmit",
    "storybook:build": "build-storybook -c config/storybook/",
    "storybook:dev": "start-storybook -p 6006 -c config/storybook/",
    "test:ui": "npx loki test",
    "test:ui:ok": "npx loki approve",
    "test:ui:ci": "loki --requireReference --reactUri file:./storybook-static",
    "test:ui:json": "node scripts/generate-visual-json-report.js",
    "test:ui:html": "reg-cli --from .loki/report.json --report .loki/report.html",
    "test:ui:report": "npm run test:ui:json && npm run test:ui:html",
    "postinstall": "node scripts/clearCache.js"
  },
